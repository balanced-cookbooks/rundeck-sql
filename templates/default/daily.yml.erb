- schedule:
    time:
      seconds: '0'
      minute: '30'
      hour: '22'
    month: '*'
    weekday:
      day: 'MON-FRI'
    year: '*'
  loglevel: INFO
  sequence:
    keepgoing: false
    strategy: node-first
    commands:
    <% @commands.each do |command| %>
    - exec: <%= command %>
    <% end %>
  description: 'Daily SQL Scripts'
  notification:
    onfailure:
      recipients: <%= @failure_recipient %>
      urls: <%= @failure_notify_url %>
  nodefilters:
    dispatch:
      threadcount: 1
      keepgoing: false
      excludePrecedence: true
      rankOrder: ascending
    include:
      tags: balanced-worker-<%= @app_environment %>

    time:
      seconds: '?'
      minute: '?'
      hour: '?'
    dayofmonth: '1'
    month: '*'
    weekday:
      day: '?'
    year: '*'
