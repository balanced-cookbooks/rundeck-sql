- schedule:
    time:
      seconds: '?'
      minute: '?'
      hour: '?'
    month: '*'
    year: '*'
    dayofmonth: '1'
    weekday:
      day: '?'
  loglevel: INFO
  sequence:
    keepgoing: false
    strategy: node-first
    commands:
    <% @commands.each do |command| %>
    - exec: <%= command %>
    <% end %>
  description: 'Monthly SQL scripts'
  notification:
    onfailure:
      recipients: <%= @failure_recipient %>
      urls: <%= @failure_notify_url %>
  nodefilters:
    dispatch:
      threadcount: 1
      keepgoing: false
      excludePrecedence: true
      rankOrder: ascending
    include:
      tags: balanced-worker-<%= @app_environment %>
